<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".entry_page">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="174dp"
            android:layout_height="100dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="Journey"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="368dp"
            android:layout_height="216dp"
            android:layout_marginTop="100dp"
            android:background="#e0e0e0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:gravity="center">

                <Button
                    android:id="@+id/button_navigate_add_entry_page"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:text="New Entry"
                    android:textSize="35dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:gravity="center">

                <Button
                    android:id="@+id/button_navigate_previous_entries"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:text="Previous Entries"
                    android:textSize="35dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="51dp" />

        </TableLayout>


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="148dp"
            android:layout_height="165dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/cs_4750_logo_body_removebg_preview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>